# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/authentication_db"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here-make-it-very-long-and-secure"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Email Configuration (Gmail example)
EMAIL_USERNAME="your-email@gmail.com"
EMAIL_PASSWORD="your-app-specific-password"

# Redis Configuration (for token blacklisting and caching)
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""

# Application Configuration
PORT=3000
NODE_ENV="development"

# Frontend URLs (for email templates)
FRONTEND_URL="http://localhost:3001"
FRONTEND_RESET_PASSWORD_URL="http://localhost:3001/reset-password"
FRONTEND_VERIFICATION_URL="http://localhost:3001/verify-email"

# Security Configuration
BCRYPT_SALT_ROUNDS=10
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_LENGTH=30

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# CORS Configuration
CORS_ORIGIN="http://localhost:3001"
